akka {
    # here we are configuring log levels
    #log-config-on-start = on
    stdout-loglevel = INFO
    loglevel = INFO
    suppress-json-serializer-warning = off
    log-dead-letters = off
    
    # this config section will be referenced as akka.actor
    actor {
        provider = cluster
        #serialize-creators = on
        serialize-messages = on
         serializers {
            hyperion = "Akka.Serialization.HyperionSerializer, Akka.Serialization.Hyperion"            
        }
        serialization-bindings {            
            "System.Object" = hyperion
           
            
        }
        debug {
            receive = off
            autoreceive = off
            lifecycle = off
            event-stream = off
            unhandled = off
        }

        default-dispatcher = {
            executor = channel-executor
            throughput = 100
            fork-join-executor { #channelexecutor will re-use these settings
                parallelism-min = 8
                parallelism-factor = 1
                parallelism-max = 64
            }
        }

        internal-dispatcher = {
            executor = channel-executor
            throughput = 100
            fork-join-executor { #channelexecutor will re-use these settings
                parallelism-min = 8
                parallelism-factor = 1
                parallelism-max = 64
            }
        }

        default-remote-dispatcher {
            type = Dispatcher
            executor = channel-executor
            throughput = 100
            fork-join-executor {
                parallelism-min = 8
                parallelism-factor = 1
                parallelism-max = 64
            }
        }

        backoff-remote-dispatcher {
            executor = channel-executor
             throughput = 100
            fork-join-executor {
                    parallelism-min = 8
                    parallelism-max = 64
                }
            }
    }

    # here we're configuring the Akka.Remote module
    remote {
        dot-netty.tcp {
            port = 4055
            hostname = "0.0.0.0"
            public-hostname = "ccamilleri-lptp"
        }
         batching {

            enabled = true

            max-pending-writes = 30
        }
        log-remote-lifecycle-events = off

    }
          
    
     cluster {
       seed-nodes = ["akka.tcp://ping-pong-cluster-system@ccamilleri-lptp:4055"] # address of seed node       
       downing-provider-class = "Akka.Cluster.SplitBrainResolver, Akka.Cluster"
        split-brain-resolver {
            active-strategy = keep-majority
        }
        
       roles = ["thespis"] # roles this member is in
       #role.["thespis"].min-nr-of-members = 3 # crawler role minimum node count
    }
    
    extensions = ["Akka.Cluster.Tools.Client.ClusterClientReceptionistExtensionProvider, Akka.Cluster.Tools"]
}